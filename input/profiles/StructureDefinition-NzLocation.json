{
  "resourceType": "StructureDefinition",
  "id": "NzLocation",
  "text": {
    "div": "<div xmlns=\"http://www.w3.org/1999/xhtml\">NZ Location profile</div>",
    "status": "additional"
  },
  "url": "http://hl7.org.nz/fhir/StructureDefinition/NzLocation",
  "version": "0.2.0",
  "name": "NzLocation",
  "title": "NZ Location",
  "status": "active",
  "description": "NZ base Location profile. Adds slicing for HPI Facility code and uses nzAddress",
  "fhirVersion": "4.0.1",
  "mapping": [
    {
      "identity": "rim",
      "uri": "http://hl7.org/v3",
      "name": "RIM Mapping"
    },
    {
      "identity": "w5",
      "uri": "http://hl7.org/fhir/fivews",
      "name": "FiveWs Pattern Mapping"
    }
  ],
  "kind": "resource",
  "abstract": false,
  "type": "Location",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Location",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Location.extension",
        "path": "Location.extension",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "url"
            }
          ],
          "ordered": false,
          "rules": "open"
        }
      },
      {
        "id": "Location.extension:edi-address",
        "path": "Location.extension",
        "sliceName": "edi-address",
        "short": "The healthLink EDI address associated with this Location",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "http://hl7.org.nz/fhir/StructureDefinition/edi-address"
            ]
          }
        ]
      },
      {
        "id": "Location.identifier",
        "path": "Location.identifier",
        "slicing": {
          "discriminator": [
            {
              "type": "pattern",
              "path": "use"
            }
          ],
          "rules": "openAtEnd"
        }
      },
      {
        "id": "Location.identifier:facId",
        "path": "Location.identifier",
        "sliceName": "facId",
        "short": "The current Facility id for this location",
        "min": 0,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Location.identifier:facId.use",
        "path": "Location.identifier.use",
        "min": 1,
        "patternCode": "official"
      },
      {
        "id": "Location.identifier:facId.system",
        "path": "Location.identifier.system",
        "patternUri": "https://standards.digital.health.nz/id/hpi-facility"
      },
      {
        "id": "Location.identifier:dormantFacId",
        "path": "Location.identifier",
        "sliceName": "dormantFacId",
        "short": "Old facility id's that have been deprecated",
        "min": 0,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Location.identifier:dormantFacId.use",
        "path": "Location.identifier.use",
        "min": 1,
        "patternCode": "old"
      },
      {
        "id": "Location.identifier:dormantFacId.system",
        "path": "Location.identifier.system",
        "patternUri": "https://standards.digital.health.nz/id/hpi-facility"
      },
      {
        "id": "Location.address",
        "path": "Location.address",
        "type": [
          {
            "code": "Address",
            "profile": [
              "http://hl7.org.nz/fhir/StructureDefinition/NzAddress"
            ]
          }
        ]
      }
    ]
  }
}
